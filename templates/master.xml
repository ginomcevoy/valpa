<domain type="kvm">
	<name>_VM_VAR_{ vm_name }}</name>
	<uuid>_VM_VAR_{ vm_uuid }}</uuid>
	<memory>_CLUSTER_VAR_{ cluster_memory }}</memory>
	<memoryBacking>
		<nosharepages/>
	</memoryBacking>
	<vcpu>_CLUSTER_VAR_{ cluster_vcpu }}</vcpu>
	<os>
		<type arch="x86_64" machine="pc">hvm</type>
		<boot dev="hd"/>
	</os>
	<features>
		<acpi/>
	</features>
	<clock offset="utc"/>
	<on_poweroff>destroy</on_poweroff>
	<on_reboot>restart</on_reboot>
	<on_crash>destroy</on_crash>
	<devices>
_CLUSTER_VAR_% if ib_flag %}
		<hostdev mode="subsystem" type="pci" managed="yes">
			<source>
				<address type="pci" domain="0x0000" bus="_CLUSTER_VAR_{ ib_bus }}" slot="_VM_VAR_{ ib_slot }}" function="_VM_VAR_{ infiniband_function }}"/>
			</source>
		</hostdev>
_CLUSTER_VAR_% endif %}
		<interface type="network">
			<source network="{{ network_name }}"/>
			<mac address="_VM_VAR_{ vm_mac }}"/>
_CLUSTER_VAR_% if network_option == 'vhost' or network_option == 'virtio' %}
			<model type="virtio"/>
			<driver name="_CLUSTER_VAR_{ network_driver }}"/>
_CLUSTER_VAR_% endif %}
		</interface>
		<emulator>/usr/bin/kvm</emulator>
		<disk type="file" device="disk">
			<driver name="qemu" type="{{ xml_disk_drivertype }}"/>
			<source file="{{ repo_root }}/_VM_VAR_{ vm_path }}/_CLUSTER_VAR_{ cluster_disk }}"/>
			<target dev="{{ xml_disk_dev }}" bus="_CLUSTER_VAR_{ cluster_disk_bus }}"/>
		</disk>
		<console type="pty">
			<target port="0"/>
		</console>
		<input type="mouse" bus="ps2"/>
		<graphics type="vnc" port="-1" autoport="yes" listen="127.0.0.1" keymap="en-us"/>
		<video>
			<model type="cirrus" vram="9216" heads="1"/>
		</video>
	</devices>
</domain>
