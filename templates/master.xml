<domain type="kvm">
	<name>@vm_name</name>
	<uuid>@vm_uuid</uuid>
	<memory>@cluster_memory</memory>
	<memoryBacking>
		<nosharepages/>
	</memoryBacking>
	<vcpu>@cluster_vcpu</vcpu>
	<os>
		<type arch="x86_64" machine="pc">hvm</type>
		<boot dev="hd"/>
	</os>
	<features>
		<acpi/>
	</features>
	<clock offset="utc"/>
	<on_poweroff>destroy</on_poweroff>
	<on_reboot>restart</on_reboot>
	<on_crash>destroy</on_crash>
	<devices>
		<interface type="network">
			<source network="@network_name"/>
			<mac address="@vm_mac"/>
_VESPA_POUND_if (@network_option == 'vhost' || @network_option == 'virtio')
			<model type="virtio"/>
			<driver name="@network_driver"/>
_VESPA_POUND_end
		</interface>
		<emulator>/usr/bin/kvm</emulator>
		<disk type="file" device="disk">
			<driver name="qemu" type="@xml_disk_drivertype"/>
			<source file="@repo_root/@vm_path/@cluster_disk"/>
			<target dev="@xml_disk_dev" bus="@cluster_disk_bus"/>
		</disk>
		<console type="pty">
			<target port="0"/>
		</console>
		<input type="mouse" bus="ps2"/>
		<graphics type="vnc" port="-1" autoport="yes" listen="127.0.0.1" keymap="en-us"/>
		<video>
			<model type="cirrus" vram="9216" heads="1"/>
		</video>
	</devices>
</domain>
