<domain type="kvm">
	<name>_VM_VAR_{ vm_name }}</name>
	<uuid>_VM_VAR_{ vm_uuid }}</uuid>
	<memory>4194304</memory>
	<memoryBacking>
		<nosharepages/>
	</memoryBacking>
	<vcpu>4</vcpu>
	<os>
		<type arch="x86_64" machine="pc">hvm</type>
		<boot dev="hd"/>
	</os>
	<features>
		<acpi/>
	</features>
	<clock offset="utc"/>
	<on_poweroff>destroy</on_poweroff>
	<on_reboot>restart</on_reboot>
	<on_crash>destroy</on_crash>
	<devices>
		<hostdev mode="subsystem" type="pci" managed="yes">
			<source>
				<address type="pci" domain="0x0000" bus="0x03" slot="0x00" function="_VM_VAR_{ infiniband_function }}"/>
			</source>
		</hostdev>
		<interface type="network">
			<source network="vespa-external-bridge"/>
			<mac address="_VM_VAR_{ vm_mac }}"/>
			<model type="virtio"/>
			<driver name="qemu"/>
		</interface>
		<emulator>/usr/bin/kvm</emulator>
		<disk type="file" device="disk">
			<driver name="qemu" type="raw"/>
			<source file="/home/giacomo/vms/_VM_VAR_{ vm_path }}/disk.img"/>
			<target dev="vda" bus="virtio"/>
		</disk>
		<console type="pty">
			<target port="0"/>
		</console>
		<input type="mouse" bus="ps2"/>
		<graphics type="vnc" port="-1" autoport="yes" listen="127.0.0.1" keymap="en-us"/>
		<video>
			<model type="cirrus" vram="9216" heads="1"/>
		</video>
	</devices>
</domain>